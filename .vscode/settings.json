{
    "terminal.integrated.env.osx": {
      "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/GenericValidators",
    },
    "terminal.integrated.env.linux": {
      "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/GenericValidators",
    },
    "terminal.integrated.env.windows": {
      "PYTHONPATH": "${env:PYTHONPATH};${workspaceFolder}/GenericValidators",
    },
    "python.testing.unittestArgs": [
      "-v",      // Verbose output
      "-s",      // Discover tests in specified modules
      "./GenericValidators/tests",  // First module to include
      "./DataAccess/tests",        // Second module to include
      "-p",      // Pattern for test files
      "test*.py" // Match files starting with "test" and ending with ".py"
  ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled":true
  }